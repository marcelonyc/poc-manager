# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/poc_manager
DATABASE_TEST_URL=postgresql://postgres:postgres@localhost:5432/poc_manager_test

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Default/Platform)
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-password
MAIL_FROM=noreply@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=True
MAIL_SSL=False

# Application Settings
ENVIRONMENT=development
DEBUG=True
CORS_ORIGINS=http://localhost:3001,http://localhost:5173

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# Platform Limits (Default)
DEFAULT_TENANT_ADMIN_LIMIT=5
DEFAULT_ADMINISTRATOR_LIMIT=10
DEFAULT_SALES_ENGINEER_LIMIT=50
DEFAULT_CUSTOMER_LIMIT=500

# Integration Settings (Optional - configured per tenant)
# Slack
SLACK_DEFAULT_TOKEN=
SLACK_DEFAULT_CHANNEL=

# Jira
JIRA_DEFAULT_URL=
JIRA_DEFAULT_EMAIL=
JIRA_DEFAULT_API_TOKEN=

# GitHub
GITHUB_DEFAULT_TOKEN=
